import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int sum=0;
        int a=n;
        while(a>=1){
          int rem=a%10;
          sum=sum+rem;
          a=a/10;
        }
        if(n%sum==0){
            System.out.println("Harshad Number");
      }
        else{
              System.out.println("Not Harshad Number");
        }
         }
}
